# =================================
# School Chat System - Environment Variables
# =================================

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Database Configuration
# PostgreSQL example
DB_HOST=localhost
DB_PORT=5432
DB_NAME=school_chat_db
DB_USER=postgres
DB_PASSWORD=your_database_password

# Database Connection Pool
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRES_IN=24h

# LINE Configuration
# LINE Login Channel
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret

# LINE Messaging API (optional for notifications)
LINE_CHANNEL_ACCESS_TOKEN=your_line_messaging_api_access_token

# Web Push Notification Configuration
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@your-school-domain.com

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_DIR=uploads/

# Security Configuration
# Rate Limiting
RATE_LIMIT_WINDOW=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Configuration (optional for session store or caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@your-school-domain.com
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately

# School Information
SCHOOL_NAME=Your School Name
SCHOOL_CODE=YOURSCHOOL01

# Feature Flags
ENABLE_WEB_PUSH=true
ENABLE_LINE_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOAD=true

# External API Configuration
# Weather API (example)
WEATHER_API_KEY=your_weather_api_key

# Google Calendar API (example for school events)
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# Monitoring and Analytics
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry for Error Tracking
SENTRY_DSN=https://your_sentry_dsn_here

# Development Tools
# Hot reload for development
HOT_RELOAD=true

# Debug Mode
DEBUG_MODE=true

# Test Database (for running tests)
TEST_DB_NAME=school_chat_test_db

# =================================
# Instructions for Setup:
# =================================
# 1. Copy this file to '.env' in the same directory
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit the .env file to version control
# 4. Keep your secrets secure and rotate them regularly
# 5. Use different values for development, staging, and production environments